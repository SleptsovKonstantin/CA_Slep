{
  "manifest_version": 2,

  "name": "EXCEED Recruiting",
  "description": "This extension will analyze a page using ERCRM",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": ["js/helpers.js","js/background.js", "js/domain.js"]
  },
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage"
  ]
}
